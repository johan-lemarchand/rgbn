{% extends 'base.html.twig' %}

{% block title %}page des projet{% endblock %}

{% block body %}
    {% include'home/header.html.twig' %}
    <h1 class="p_project ml-5"> {{ projects.title }}</h1>
    <div class="flex-container m-5">
        <div class="project-single-boxtwo-one">
            <h2 class="d-flex justify-content-center">Détail du projet</h2>
            <p class="project-single-p">{{ projects.content }}</p>
        </div>
        <div class="d-flex " style="max-width:630px">
            <h2 class="project-single-title-one">Avant</h2>
            <img class="" src="{{ asset('uploads/' ~ projects.imgAfter.name) }}" alt="photo avant">
            <img class="" src="{{ asset('uploads/' ~ projects.imgBefore.name) }}" alt="photo après">
            <h2 class="project-single-title-two">Après</h2>
        </div>
    </div>


    <div class="project-single-boxtwo">
        <div class="project-single-boxtwo-two">
            {% for images in projects.image %}
                <img class="project-img " src="{{ asset('uploads/' ~ images.name) }}">
            {% endfor %}
        </div>
    </div>

    {% include'home/footer.html.twig' %}
{% endblock %}
